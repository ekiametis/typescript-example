{
  "name": "typescript-example",
  "version": "1.0.0",
  "description": "It's a project I would like to show you the typescript code and my way to organize the project using DDD + SOLID + Package-by-feature + Clean Code + REST (Best practices)",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/typescript/bin/tsc",
    "start": "node dist/server.js",
    "start-ts": "ts-node-dev --transpile-only --respawn --ignore-watch node_modules src/server.ts",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.spec.ts\" npm run test"
  },
  "author": "Emmanuel Kiametis",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "express-openapi-validator": "^4.10.1",
    "log4js": "^6.3.0",
    "typescript": "^4.1.3",
    "uuidv4": "^6.2.6"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/express": "^4.17.9",
    "@types/mocha": "^8.2.0",
    "chai": "^4.2.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1"
  }
}
